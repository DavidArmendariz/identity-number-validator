{
  "author": "David Armend√°riz",
  "name": "identity-number-validator",
  "version": "1.1.8",
  "description": "Package to validate if an identity number is valid or not",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "yarn build:types && yarn build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions '.ts' --source-maps inline",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "coverage": "jest --clearCache && jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "check-types-and-lint": "yarn check-types && yarn lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DavidArmendariz/identity-number-validator.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DavidArmendariz/identity-number-validator/issues"
  },
  "homepage": "https://github.com/DavidArmendariz/identity-number-validator#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.1",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn coverage"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "yarn check-types-and-lint"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "ecuador",
    "cedula",
    "identity"
  ]
}
